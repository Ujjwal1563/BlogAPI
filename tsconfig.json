{
    "compilerOptions": {
        "target": "es6",
        "module":"commonjs",
        "rootDir": "src",
        "baseUrl": "./",
        "outDir":"dist",
        "removeComments":true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "ignoreDeprecations":"6.0",
        "paths":{
            "@/*":[
                "src/*"
            ]
        }
    },
    "include":[
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}